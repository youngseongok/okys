{
  "svg": {
    "mode": {
      "css": {
        "prefix": ".ico--%s",
        "sprite": "ico.svg",
        "dimensions": true,
        "common": "ico",
        "bust": false,
        "render": {
          "css": {
            "css": true
          }
        },
        "example": false
      },
      "symbols": true
    }
  },
  "prefix": ["last 5 versions", "IE >= 9"],
  "cleanCss": {
    "format": {
      "breaks": {
        "afterAtRule": true,
        "afterBlockBegins": true,
        "afterBlockEnds": true,
        "afterComment": true,
        "afterProperty": true,
        "afterRuleBegins": true,
        "afterRuleEnds": true,
        "beforeBlockEnds": true,
        "betweenSelectors": true
      },
      "indentBy": 1,
      "indentWith": "tab",
      "spaces": {
        "aroundSelectorRelation": true,
        "beforeBlockBegins": true,
        "beforeValue": true
      },
      "wrapAt": false
    }
  }
}
